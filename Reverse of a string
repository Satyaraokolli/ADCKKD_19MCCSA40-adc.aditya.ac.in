import java.util.*;

 class reverseString
 {
   public static void main(String args[])
   { 
    Scanner sc=new Scanner(System.in);
    System.out.println("enter a string");
    String str=sc.nextLine();
    int n=str.length();
    char ch1[]=str.toCharArray();
    char ch2[]=new char[n];
    int i=0;
    for(int j=n-1;j>=0;j--)
    {
      ch2[j]=ch1[i];
      i++;
    }
    String temp=String.valueOf(ch2);
    System.out.println(temp);
  }
 }

Output:
enter a string
Satyarao Kolli
illoK oaraytaS

