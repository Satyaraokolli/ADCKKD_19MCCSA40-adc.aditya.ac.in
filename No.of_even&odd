 class Ev_odd_count
 
 {
   public static void main(String args[])
   { 
     int rem;
      int even=0;
      int odd=0;
      Scanner s=new Scanner(System.in);
      System.out.println("enter a value");
      int n=s.nextInt();
      for(;n>0;n=n/10)
      {
         rem=n%10;
        if((rem&1)==0)
        even=even+1;
        else
         odd=odd+1;
   
       }
       System.out.println("no of even numbers="+even);
       System.out.println("no of odd numbers="+odd);
       

   }
 }
